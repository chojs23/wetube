mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer <!--id=jsVideoPlayer-->
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__colunm
                span
                    i.fas.fa-volume-up
                span
                    |00:00 / 10:00
            .videoPlayer__colunm
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__colunm
                span   
                        i.fas.fa-expand